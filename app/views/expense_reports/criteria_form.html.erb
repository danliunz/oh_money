<%= javascript_include_tag "expense_reports" %>

<div class="container-fluid">
  <h4 class="text-center">Report Criteria</h4>
  <hr/>

   <% if alert %>
    <row>
      <div class="col-sm-offset-3 col-sm-8 alert alert-danger">
        <%= alert %>
      </div>
    </row>
  <% end %>

  <%= form_for @report_criteria, method: :get,
    url: create_expense_report_v2_path,
    html: { class: "form-horizontal", autocomplete: "off" } do |f| %>

    <%= render partial: "/shared/item_type_input",
      locals: { form_builder: f,  field_name: "root_item_type" } %>

    <%= render partial: "tag_input", locals: { form_builder: f } %>

    <%= render partial: "/shared/date_range_input", locals: { form_builder: f } %>

    <%= render partial: "aggregation_mode", locals: { form_builder: f }%>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-8">
        <%= f.submit "Create Report", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
