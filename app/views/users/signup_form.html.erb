<div class="container signup">
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>
  
  <%= form_for @user, url: signup_path, html: { id: "signup_form", class: "form-horizontal" } do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name", class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :password, "Password", class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm Password", class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <%= f.submit "Signup", class: "btn btn-primary" %>
      </div>
    </div>
    
  <% end %>
</div>
