<div class="container change-password">
  <h3 class="text-center">Change Your Password</h3>
  <p class="text-center text-success"><%= flash.notice %></p>

  <%= form_tag change_password_path, id: "change_password_form", class: "form-horizontal" do %>
    <div class="col-sm-offset-4 col-sm-8 text-danger">
      <%= flash[:old_password_error] %>
    </div>
    <div class="form-group">
      <%= label_tag :old_password, "Old password", class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= password_field_tag :old_password, nil, class: "form-control"  %>
      </div>
    </div>

    <div class="col-sm-offset-4 col-sm-8 text-danger">
      <% current_user.errors.full_messages_for(:password).each do |msg| %>
        <%= msg %><br/>
      <% end %>
    </div>
    <div class="form-group">
      <%= label_tag :new_password, "New password", class: "col-sm-4 control-label"  %>
      <div class="col-sm-8">
        <%= password_field_tag :new_password, nil, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-offset-4 col-sm-8 text-danger">
      <% current_user.errors.full_messages_for(:password_confirmation).each do |msg| %>
        <%= msg %><br/>
      <% end %>
    </div>
    <div class="form-group">
      <%= label_tag :new_password_confirmation, "Confirm new password", class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= password_field_tag :new_password_confirmation, nil, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <%= submit_tag "Update password", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
