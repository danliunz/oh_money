<div class="form-group">
  <%= form_builder.label :parents, "Categories", class: "col-sm-3 control-label" %>

  <div id="parent_item_types_panel" class="col-sm-8">
    <ul class="list-group">
      <% form_builder.object.parents.each do |parent_item_type| %>
        <li class="list-group-item">
          <%= link_to parent_item_type.name,
            show_item_type_path(parent_item_type),
            class: "btn btn-success"
           %>

          <button type="button" class="close">
            <span aria-hidden="true">&times;</span>
          </button>
        </li>
      <% end %>

      <li class="list-group-item form-inline item-types-panel">
        <input id="parent_item_type_input" type="text" class="form-control" />
        <button id="add_parent_item_type_btn" type="button" class="btn btn-default">
          add
        </button>

        <!-- dropdown menu for auto-complete -->
        <div class="dropdown">
          <button style="display: none" type="button" data-toggle="dropdown"></button>
          <ul class="dropdown-menu"></ul>
        </div>
      </li>
    </ul>

    <!-- hidden select input to hold parent item types-->
    <select name="item_type[parents][]" class="hidden" multiple="true">
      <% form_builder.object.parents.each do |parent_item_type| %>
        <option selected="true" value="<%= parent_item_type.name %>"> <%= parent_item_type.name %> </option>
      <% end %>
    </select>
  </div>
</div>